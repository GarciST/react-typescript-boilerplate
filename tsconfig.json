{
  "compilerOptions": {
    "outDir": "./tsc-output/",
    "lib": ["dom", "esnext"],
    "noImplicitOverride": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "test/**/*",
    "src/**/*",
    "**/.eslintrc.js",
    "webpack.config.js"
  ],
  "exclude": ["node_modules"]
}